generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@map("users")
}

model Project {
  id                    String                  @id @default(cuid())
  name                  String
  description           String?
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  userId                String
  authFlows             AuthFlow[]
  browserSessions       BrowserSession[]
  crossPageValidations  CrossPageValidation[]
  cssPreviewPerformance CSSPreviewPerformance[]
  pageStates            PageState[]
  elements              ProjectElement[]
  urls                  ProjectUrl[]
  user                  User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tests                 Test[]
  testSuites            TestSuite[]

  @@map("projects")
}

model ProjectUrl {
  id           String           @id @default(cuid())
  url          String
  title        String?
  description  String?
  analyzed     Boolean          @default(false)
  analysisDate DateTime?
  createdAt    DateTime         @default(now())
  projectId    String
  elements     ProjectElement[]
  project      Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_urls")
}

model Test {
  id          String          @id @default(cuid())
  name        String
  description String?
  steps       Json
  status      String          @default("draft")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  projectId   String
  startingUrl String
  authFlowId  String?
  executions  TestExecution[]
  suiteTests  TestSuiteTest[]
  authFlow    AuthFlow?       @relation(fields: [authFlowId], references: [id])
  project     Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("tests")
}

model TestExecution {
  id          String    @id @default(cuid())
  status      String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  duration    Int?
  results     Json?
  errorMsg    String?
  testId      String
  logs        Json?
  metrics     Json?
  screenshots Json?
  test        Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@map("test_executions")
}

model ProjectElement {
  id                 String                   @id @default(cuid())
  projectId          String
  selector           String
  elementType        String
  description        String
  confidence         Float
  attributes         Json?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  authFlowId         String?
  boundingRect       Json?
  category           String?
  cssInfo            Json?
  discoveryState     String?
  discoveryTrigger   String?
  group              String?
  isCommon           Boolean                  @default(false)
  isModal            Boolean                  @default(false)
  pageStateId        String?
  requiresAuth       Boolean                  @default(false)
  sourcePageTitle    String?
  sourceUrlId        String?
  sourceUrlPath      String?
  screenshot         String?
  accessibilityScore Float?
  fallbackSelectors  String[]
  isValidated        Boolean                  @default(false)
  lastValidated      DateTime?
  overallQuality     Float?
  qualityMetrics     Json?
  specificityScore   Float?
  stabilityScore     Float?
  uniquenessScore    Float?
  validationErrors   String[]
  authFlow           AuthFlow?                @relation(fields: [authFlowId], references: [id])
  pageState          PageState?               @relation(fields: [pageStateId], references: [id])
  project            Project                  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sourceUrl          ProjectUrl?              @relation(fields: [sourceUrlId], references: [id], onDelete: Cascade)
  qualityHistory     SelectorQualityHistory[]

  @@unique([projectId, selector, sourceUrlId, discoveryState])
  @@map("project_elements")
}

model AuthFlow {
  id                String           @id @default(cuid())
  name              String
  loginUrl          String
  steps             Json
  credentials       Json
  useAutoDetection  Boolean          @default(true)
  manualSelectors   Json?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  projectId         String
  project           Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  browserSessions   BrowserSession[]
  pageStates        PageState[]
  elements          ProjectElement[]
  tests             Test[]

  @@map("auth_flows")
}

model PageState {
  id         String           @id @default(cuid())
  stateName  String
  trigger    String?
  url        String
  pageTitle  String?
  capturedAt DateTime         @default(now())
  authFlowId String?
  projectId  String
  authFlow   AuthFlow?        @relation(fields: [authFlowId], references: [id])
  project    Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  elements   ProjectElement[]

  @@map("page_states")
}

model BrowserSession {
  id              String    @id @default(cuid())
  sessionToken    String    @unique
  isAuthenticated Boolean   @default(false)
  currentState    String    @default("initial")
  currentUrl      String?
  startedAt       DateTime  @default(now())
  lastActivity    DateTime  @default(now())
  expiresAt       DateTime
  projectId       String
  authFlowId      String?
  authFlow        AuthFlow? @relation(fields: [authFlowId], references: [id])
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("browser_sessions")
}

model SelectorQualityHistory {
  id                 String         @id @default(cuid())
  selector           String
  uniquenessScore    Float
  stabilityScore     Float
  accessibilityScore Float
  specificityScore   Float
  overallQuality     Float
  matchCount         Int
  testResults        Json?
  validationDate     DateTime       @default(now())
  elementId          String
  element            ProjectElement @relation(fields: [elementId], references: [id], onDelete: Cascade)

  @@index([elementId, validationDate])
  @@map("selector_quality_history")
}

model CSSPreviewPerformance {
  id               String   @id @default(cuid())
  elementCount     Int
  extractionTimeMs Int
  renderingTimeMs  Int?
  totalTimeMs      Int
  success          Boolean  @default(true)
  errorMessage     String?
  createdAt        DateTime @default(now())
  projectId        String
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@map("css_preview_performance")
}

model CrossPageValidation {
  id                String   @id @default(cuid())
  selector          String
  totalUrls         Int
  validUrls         Int
  uniqueOnAllPages  Boolean
  averageMatchCount Float
  inconsistentPages String[]
  validationErrors  String[]
  overallScore      Float
  validatedAt       DateTime @default(now())
  projectId         String
  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, selector, validatedAt])
  @@map("cross_page_validations")
}

model TestSuite {
  id          String               @id @default(cuid())
  name        String
  description String?
  status      String               @default("draft") // draft, active
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  projectId   String
  project     Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tests       TestSuiteTest[]
  executions  TestSuiteExecution[]

  @@map("test_suites")
}

model TestSuiteTest {
  id        String    @id @default(cuid())
  suiteId   String
  testId    String
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  suite     TestSuite @relation(fields: [suiteId], references: [id], onDelete: Cascade)
  test      Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([suiteId, testId])
  @@map("test_suite_tests")
}

model TestSuiteExecution {
  id            String    @id @default(cuid())
  status        String    // running, passed, failed
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  duration      Int?      // milliseconds
  results       Json?     // aggregated results
  errorMsg      String?
  suiteId       String
  totalTests    Int       @default(0)
  passedTests   Int       @default(0)
  failedTests   Int       @default(0)
  suite         TestSuite @relation(fields: [suiteId], references: [id], onDelete: Cascade)

  @@map("test_suite_executions")
}
