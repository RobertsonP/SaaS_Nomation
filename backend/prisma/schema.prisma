generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String               @id @default(cuid())
  email       String               @unique
  name        String
  password    String
  theme       String?              @default("light")
  timezone    String?              @default("UTC")
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  projects    Project[]
  memberships OrganizationMember[]
  notificationPreferences UserNotificationPreferences?

  @@map("users")
}

model UserNotificationPreferences {
  id                   String   @id @default(cuid())
  userId               String   @unique
  emailFailures        Boolean  @default(true)
  emailSuccess         Boolean  @default(false)
  emailWeeklyDigest    Boolean  @default(true)
  notificationEmails   String[] // Array of emails to notify (defaults to user email)
  quietHoursStart      String?  // HH:mm format (UTC)
  quietHoursEnd        String?  // HH:mm format (UTC)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_notification_preferences")
}

model Organization {
  id                   String               @id @default(cuid())
  name                 String
  slug                 String               @unique
  plan                 String               @default("free") // free, pro, enterprise
  stripeCustomerId     String?
  stripeSubscriptionId String?
  subscriptionStatus   String?              @default("inactive") // active, trialing, past_due, canceled, incomplete
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean              @default(false)
  maxUsers             Int                  @default(1)
  maxExecutions        Int                  @default(100)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  members              OrganizationMember[]
  projects             Project[]
  invites              OrganizationInvite[]

  @@map("organizations")
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  role           String       @default("member") // owner, admin, member, viewer
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@map("organization_members")
}

model OrganizationInvite {
  id             String       @id @default(cuid())
  email          String
  token          String       @unique
  role           String       @default("member")
  organizationId String
  expiresAt      DateTime
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([email])
  @@map("organization_invites")
}

model Project {
  id                    String                  @id @default(cuid())
  name                  String
  description           String?
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  userId                String
  organizationId        String?
  authFlows             AuthFlow[]
  browserSessions       BrowserSession[]
  crossPageValidations  CrossPageValidation[]
  cssPreviewPerformance CSSPreviewPerformance[]
  pageStates            PageState[]
  elements              ProjectElement[]
  urls                  ProjectUrl[]
  pageRelationships     PageRelationship[]
  user                  User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization          Organization?           @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  tests                 Test[]
  testSuites            TestSuite[]

  @@index([userId])
  @@index([organizationId])
  @@map("projects")
}

model ProjectUrl {
  id             String           @id @default(cuid())
  url            String
  title          String?
  description    String?
  analyzed       Boolean          @default(false)
  analysisDate   DateTime?
  verified       Boolean          @default(false)
  lastVerified   DateTime?
  createdAt      DateTime         @default(now())
  projectId      String
  // Discovery-related fields
  discovered     Boolean          @default(false)  // Was this URL auto-discovered?
  discoveryDepth Int?                              // Depth from root URL (0 = root, 1 = first level, etc.)
  requiresAuth   Boolean          @default(false)  // Does this page require authentication?
  pageType       String?                           // navigation, content, form, external, etc.
  screenshot     String?          @db.Text         // Base64 thumbnail screenshot of the page
  elements       ProjectElement[]
  project        Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  outgoingLinks  PageRelationship[] @relation("SourceUrl")
  incomingLinks  PageRelationship[] @relation("TargetUrl")

  @@index([projectId])
  @@index([projectId, analyzed])
  @@map("project_urls")
}

model PageRelationship {
  id           String     @id @default(cuid())
  projectId    String
  sourceUrlId  String
  targetUrlId  String
  linkText     String?    // Text of the link
  linkType     String     // navigation, button, footer, sidebar, form, external
  requiresAuth Boolean    @default(false)
  createdAt    DateTime   @default(now())

  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sourceUrl    ProjectUrl @relation("SourceUrl", fields: [sourceUrlId], references: [id], onDelete: Cascade)
  targetUrl    ProjectUrl @relation("TargetUrl", fields: [targetUrlId], references: [id], onDelete: Cascade)

  @@unique([sourceUrlId, targetUrlId])
  @@index([projectId])
  @@index([sourceUrlId])
  @@index([targetUrlId])
  @@map("page_relationships")
}

model Test {
  id          String          @id @default(cuid())
  name        String
  description String?
  steps       Json
  status      String          @default("draft")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  projectId   String
  startingUrl String
  authFlowId  String?
  executions  TestExecution[]
  suiteTests  TestSuiteTest[]
  authFlow    AuthFlow?       @relation(fields: [authFlowId], references: [id], onDelete: SetNull)
  project     Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("tests")
}

model TestExecution {
  id             String    @id @default(cuid())
  status         String
  startedAt      DateTime  @default(now())
  completedAt    DateTime?
  duration       Int?
  results        Json?
  errorMsg       String?
  testId         String
  logs           Json?
  metrics        Json?
  screenshots    Json?
  videoPath      String?   // Relative path to video file (.webm)
  videoThumbnail String?   // Relative path to thumbnail image (.png)
  test           Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@index([testId])
  @@index([testId, startedAt])
  @@index([status])
  @@map("test_executions")
}

model ProjectElement {
  id                 String                   @id @default(cuid())
  projectId          String
  selector           String
  elementType        String
  description        String
  confidence         Float
  attributes         Json?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  authFlowId         String?
  boundingRect       Json?
  category           String?
  cssInfo            Json?
  discoveryState     String?
  discoveryTrigger   String?
  group              String?
  isCommon           Boolean                  @default(false)
  isModal            Boolean                  @default(false)
  pageStateId        String?
  requiresAuth       Boolean                  @default(false)
  sourcePageTitle    String?
  sourceUrlId        String?
  sourceUrlPath      String?
  screenshot         String?
  accessibilityScore Float?
  fallbackSelectors  String[]
  isValidated        Boolean                  @default(false)
  lastValidated      DateTime?
  overallQuality     Float?
  qualityMetrics     Json?
  specificityScore   Float?
  stabilityScore     Float?
  uniquenessScore    Float?
  validationErrors   String[]
  authFlow           AuthFlow?                @relation(fields: [authFlowId], references: [id], onDelete: SetNull)
  pageState          PageState?               @relation(fields: [pageStateId], references: [id])
  project            Project                  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sourceUrl          ProjectUrl?              @relation(fields: [sourceUrlId], references: [id], onDelete: Cascade)
  qualityHistory     SelectorQualityHistory[]

  // Unique constraint: same element (selector) on same URL in same project
  // Note: discoveryState removed from unique constraint to prevent duplicates on re-analysis
  @@unique([projectId, selector, sourceUrlId])
  @@index([authFlowId])
  @@index([pageStateId])
  @@index([sourceUrlId])
  @@index([projectId, confidence])
  @@index([projectId, discoveryState])
  @@map("project_elements")
}

model AuthFlow {
  id                String           @id @default(cuid())
  name              String
  loginUrl          String
  steps             Json
  credentials       Json
  useAutoDetection  Boolean          @default(true)
  manualSelectors   Json?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  projectId         String
  project           Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  browserSessions   BrowserSession[]
  pageStates        PageState[]
  elements          ProjectElement[]
  tests             Test[]

  @@index([projectId])
  @@map("auth_flows")
}

model PageState {
  id         String           @id @default(cuid())
  stateName  String
  trigger    String?
  url        String
  pageTitle  String?
  capturedAt DateTime         @default(now())
  authFlowId String?
  projectId  String
  authFlow   AuthFlow?        @relation(fields: [authFlowId], references: [id], onDelete: SetNull)
  project    Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  elements   ProjectElement[]

  @@index([projectId])
  @@index([authFlowId])
  @@map("page_states")
}

model BrowserSession {
  id              String    @id @default(cuid())
  sessionToken    String    @unique
  isAuthenticated Boolean   @default(false)
  currentState    String    @default("initial")
  currentUrl      String?
  startedAt       DateTime  @default(now())
  lastActivity    DateTime  @default(now())
  expiresAt       DateTime
  projectId       String
  authFlowId      String?
  authFlow        AuthFlow? @relation(fields: [authFlowId], references: [id], onDelete: SetNull)
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([authFlowId])
  @@map("browser_sessions")
}

model SelectorQualityHistory {
  id                 String         @id @default(cuid())
  selector           String
  uniquenessScore    Float
  stabilityScore     Float
  accessibilityScore Float
  specificityScore   Float
  overallQuality     Float
  matchCount         Int
  testResults        Json?
  validationDate     DateTime       @default(now())
  elementId          String
  element            ProjectElement @relation(fields: [elementId], references: [id], onDelete: Cascade)

  @@index([elementId, validationDate])
  @@map("selector_quality_history")
}

model CSSPreviewPerformance {
  id               String   @id @default(cuid())
  elementCount     Int
  extractionTimeMs Int
  renderingTimeMs  Int?
  totalTimeMs      Int
  success          Boolean  @default(true)
  errorMessage     String?
  createdAt        DateTime @default(now())
  projectId        String
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@map("css_preview_performance")
}

model CrossPageValidation {
  id                String   @id @default(cuid())
  selector          String
  totalUrls         Int
  validUrls         Int
  uniqueOnAllPages  Boolean
  averageMatchCount Float
  inconsistentPages String[]
  validationErrors  String[]
  overallScore      Float
  validatedAt       DateTime @default(now())
  projectId         String
  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, selector, validatedAt])
  @@map("cross_page_validations")
}

model TestSuite {
  id          String               @id @default(cuid())
  name        String
  description String?
  status      String               @default("draft") // draft, active
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  projectId   String
  project     Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tests       TestSuiteTest[]
  executions  TestSuiteExecution[]

  @@index([projectId])
  @@map("test_suites")
}

model TestSuiteTest {
  id        String    @id @default(cuid())
  suiteId   String
  testId    String
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  suite     TestSuite @relation(fields: [suiteId], references: [id], onDelete: Cascade)
  test      Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([suiteId, testId])
  @@map("test_suite_tests")
}

model TestSuiteExecution {
  id            String    @id @default(cuid())
  status        String    // running, passed, failed
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  duration      Int?      // milliseconds
  results       Json?     // aggregated results
  errorMsg      String?
  suiteId       String
  totalTests    Int       @default(0)
  passedTests   Int       @default(0)
  failedTests   Int       @default(0)
  suite         TestSuite @relation(fields: [suiteId], references: [id], onDelete: Cascade)

  @@index([suiteId])
  @@map("test_suite_executions")
}
