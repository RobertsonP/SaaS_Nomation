# Copy this file to .env and fill in real values
# IMPORTANT: Never commit .env files with real secrets to version control

# Environment
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://nomation_user:nomation_password@postgres:5432/nomation
POSTGRES_USER=nomation_user
POSTGRES_PASSWORD=nomation_password
POSTGRES_DB=nomation

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis (Job Queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Backend API
PORT=3002
CORS_ORIGIN=http://localhost:3001

# Frontend
VITE_API_URL=http://localhost:3002

# Playwright
PLAYWRIGHT_BROWSERS_PATH=/opt/playwright
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Prisma (matches schema.prisma binaryTargets)
PRISMA_CLI_BINARY_TARGETS=native,debian-openssl-1.1.x,linux-musl

# Production Settings (for .env.production)
# Generate secure secrets using:
#   JWT_SECRET: openssl rand -base64 64
#   REDIS_PASSWORD: openssl rand -base64 32
#   POSTGRES_PASSWORD: openssl rand -base64 32
