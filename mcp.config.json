{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-filesystem/dist/index.js", "/mnt/d/SaaS_Nomation"]
    },
    "postgres-db": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-postgres/dist/index.js"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://nomation_user:nomation_password@localhost:5432/nomation_db"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["mcp-server-playwright", "--headless"]
    },
    "docker": {
      "command": "uvx",
      "args": ["docker-mcp"]
    },
    "redis": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-redis", "redis://localhost:6379"]
    },
    "notionApi": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "brave-search": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-brave-search/dist/index.js"],
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "memory": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-memory/dist/index.js"]
    }
  }
}